<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.MusicStopBMG3">
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".ApplicationClass"
        android:theme="@style/Theme.MusicStopBMG3">
        <activity
            android:name="com.example.MusicStopBMG3.AlbumDetails"
            android:exported="true" />
        <activity
            android:name="com.example.MusicStopBMG3.PlayerActivity"
            android:exported="true" />
        <activity
            android:name="com.example.MusicStopBMG3.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MusicService" android:enabled="true"/>
    </application>


</manifest>